RESOURCE = (get -> put -> RESOURCE).

P = (printer.get -> scanner.get -> copy 
                 -> printer.put -> scanner.put -> P).

Q = (printer.get -> scanner.get -> copy 
                 -> printer.put -> scanner.put -> Q).

||SYS = (p:P || q:Q 
        || {p,q}::printer:RESOURCE 
        || {p,q}::scanner:RESOURCE
        ).
